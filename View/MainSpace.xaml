<Page x:Class="ArchiveSearchEngine.MainSpace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveSearchEngine"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainSpace">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Margin="10">
            <ListBox Background="Transparent" BorderBrush="Transparent" Name="SpacesListBox" HorizontalContentAlignment="Stretch" SelectionChanged="_viewModel.SpacesListBox_GotFocus">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <TextBlock Style="{StaticResource DefaultTextStyle}" Text="{Binding Path=Title}" TextWrapping="Wrap" MaxWidth="450"></TextBlock>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <Border Margin="10" Grid.Column="1" Grid.RowSpan="3">
            <Frame x:Name="DisplayFrame"></Frame>
        </Border>
        
        
        
    </Grid>
</Page>
