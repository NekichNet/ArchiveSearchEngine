<Page x:Class="ArchiveSearchEngine.IntertnalPages.UserAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveSearchEngine.IntertnalPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserAccountPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource DenyButtonStyle}" Click="LogOut" Margin="10" Grid.Column="2"  Content="Выход"></Button>
        <Border Margin="10" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <StackPanel Margin="20">
                <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="Bold"  Text="Имя : " HorizontalAlignment="Left"></TextBlock>
                <TextBlock Name="UserNameDisplay"  Text="Имя" HorizontalAlignment="Left"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Text="Аккаунт : " HorizontalAlignment="Left"></TextBlock>
                <TextBlock Name="AccountStateDisplay" Text="Аккаунт" HorizontalAlignment="Left"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Text="Дата создания : " HorizontalAlignment="Left"></TextBlock>
                <TextBlock Name="CreationDateDisplay" Text="Дата создания" HorizontalAlignment="Left"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
