<Page x:Class="ArchiveSearchEngine.EntrySpace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveSearchEngine"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EntrySpace" >
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Name="Border1"  Grid.Column="2" Grid.RowSpan="4" BorderThickness="0"  Margin="10"></Border>
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="20">
            <TextBlock Text="Логин" FontFamily="Arial"></TextBlock>
            <TextBox Name="LoginGUI"></TextBox>
            <TextBlock Text="Пароль" FontFamily="Arial"></TextBlock>
            <PasswordBox Name="PasswordGUI"></PasswordBox>
        </StackPanel>

        <TextBlock TextWrapping="Wrap" FontWeight="Bold" Foreground="DarkRed" Name="ErrorGui" Grid.Column="2" Grid.Row="2"></TextBlock>

        <Button Click="SignIn" Style="{StaticResource ResourceKey=RoundedSignInButtonStyle}" Margin="20" Grid.Column="2" Grid.Row="3" Content="Войти" FontSize="70" ></Button>
        <Button Click="SignUp" Style="{StaticResource ResourceKey=RoundedRegistrationButtonStyle}" Margin="10" Grid.Column="2" Grid.Row="4"  Content="Регистрация" FontSize="70"></Button>

        <TextBlock FontFamily="Arial" Grid.Row="0" Grid.Column="2" FontWeight="Bold" Text="Вход" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="70"></TextBlock>

        
        

    
    </Grid>
</Page>
